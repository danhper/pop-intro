.fa.fa-margin
  margin-right 10px

.reveal section img
  max-height 600px

.reveal
  h1, h2, h3
    &.sub
      color #ddd
      img
        opacity 0.5
    img
      border none
      max-height 100px
      vertical-align middle
      margin-right 10px

.reveal
  .slides
    .text-middle
      vertical-align middle
    img
      &.small
        max-height 500px

  pre
    code
      font-size 0.8em
      line-height 1.2em
      max-height 550px
  pre
    font-size 1em
    .hljs-shebang, .diff .hljs-addition, .hljs-comment, .hljs-annotation, .hljs-pi, .hljs-doctype
      color #f0f1eb
